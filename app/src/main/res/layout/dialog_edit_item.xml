<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@color/white">

    <EditText
        android:id="@+id/editFoodName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Tên món ăn"
        android:inputType="text"
        android:padding="12dp"
        android:background="@drawable/edittextshape"
        android:textSize="18sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editFoodPrice"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/edittextshape"
        android:hint="Giá món ăn"
        android:inputType="numberDecimal"
        android:padding="12dp"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editFoodName"
        />

    <EditText
        android:id="@+id/editFoodDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Mô tả món ăn"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:background="@drawable/edittextshape"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editFoodPrice"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/editFoodIngredient"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Thành phần món ăn"
        android:inputType="textMultiLine"
        android:padding="12dp"
        android:background="@drawable/edittextshape"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@id/editFoodDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/saveButton"
        android:layout_width="157dp"
        android:layout_height="57dp"
        android:background="@drawable/greenbuttonshape"
        android:fontFamily="@font/yeonsung_regular"
        android:text="Save Item"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editFoodIngredient" />




    </androidx.constraintlayout.widget.ConstraintLayout>
